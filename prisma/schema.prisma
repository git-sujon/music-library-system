// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserRole {
  user
  admin
}

model User {
  id       String   @id @default(uuid())
  name     String
  email    String   @unique
  role     UserRole
  password String
  Album    Album[]
  Artist   Artist[]
  Song     Song[]
}

model Album {
  id          String   @id @default(uuid())
  title       String
  releaseYear Int
  genre       String
  user        User     @relation(fields: [userId], references: [id])
  userId      String
  artists     Artist[]
  Song        Song[]
}

model Artist {
  id     String  @id @default(uuid())
  name   String
  user   User    @relation(fields: [userId], references: [id])
  userId String
  albums Album[]
}

// Song model
model Song {
  id       String @id @default(uuid())
  title    String
  duration String
  album    Album  @relation(fields: [albumId], references: [id])
  albumId  String
  user     User   @relation(fields: [userId], references: [id])
  userId   String
}
